
# aliases

case `uname | tr A-Z a-z` in
    darwin*)
        ;;
    linux*)
        alias "ls=LS_COLORS='' ls --color"
        ;;
esac

alias "vi=vim"
alias "vim-sjis=vim -c \":e ++enc=cp932\" "
alias "vim=vim -X" #don't search X server
alias "renamer.vim=vi +Renamer"

function mylv(){
    extension=${1##*.}
    if [[ "$extension" == "xz" ]];then
        xzcat $1 | lv -c
    else
        lv -c $@
    fi
};
alias "lv=mylv"
alias "su=su -l" #su
alias "bc=bc -ql"
alias "top=htop"
alias "R=R -q"
#alias "grep=grep --color=always"
alias lock="gnome-screensaver-command -l ; xset dpms force off ;  "

alias "jk=juman | knp -tab"
alias "jkd=juman | knp -tab -debug"

# alias tmux="DISABLE_AUTO_TITLE=true TERM=screen-256color-bce tmux"
alias tmux="TERM=screen-256color-bce tmux"

host=`hostname -s`
if [[ $host[0,5] == "basil" || $host == "sakura" || $host[0,7] == "tsubaki" || `hostname -a 2>/dev/null ` == "web.lang-private.kuee.kyoto-u.ac.jp" ]]; then
   export LD_PRELOAD="" #disable after tmux launch
   alias tmux="TERM=screen-256color-bce LD_PRELOAD=/lib64/libncurses.so.5 tmux"
fi


unalias \rm 2> /dev/null
unalias \cp 2> /dev/null
unalias \mv 2> /dev/null

alias "crontab-e=vi ~/.crontab; crontab ~/.crontab"
