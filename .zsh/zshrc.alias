function myjvgrep() {
    if [[ $# -eq 0 ]]; then
        echo "No filename is given for jvgrep" >&2
        return 1
    fi
    if [[ -p /dev/stdin ]]; then
        set -- "$@" "-"
    fi
    GREP_COLORS="mt=0;7;31" grep -n -R -H --binary-files=without-match --color=always "$@"
}
alias 'jvgrep=myjvgrep'

