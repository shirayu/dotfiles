function sleep_until() {
    sec=$(($(date -d "$*" +%s) - $(date +%s)))
    if [[ ${sec} -lt 0 ]]; then
        echo "Invalid argument" >&2
        return 1
    fi
    echo "Sleep time: $((sec / 3600))h $(((sec % 3600) / 60))m $((sec % 60))s" >&2
    sleep ${sec}
}

function myless() {
    extension=${1##*.}
    if [[ $extension == "xz" ]]; then
        xzless "$@"
    elif [[ $extension == "gz" || $extension == "gzip" ]]; then
        zless "$@"
    elif [[ $extension == "zst" ]]; then
        zstdless "$@"
    elif [[ $extension == "bz2" ]]; then
        bzcat "$@"
    else
        less -R "$@"
    fi
}
